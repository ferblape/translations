<!DOCTYPE html>
<html>
<head>
  <title>Translations</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="login">
<% if controller_name != "sessions" %>	
	<% if session[:user_id] %>
		Hola <%= current_user.email %>, <%= link_to "logout", logout_path %>
	<% else %>
		<%= link_to "login", login_path %>
	<% end %>
<% end %>
</div>
	
<%= flash_helper %>

<div id="container">
	<%= yield %>
</div>



</body>
</html>
